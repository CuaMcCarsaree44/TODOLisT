<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="viewmodel" type="com.cua.todolist.viewmodel.fragmentvm.TodoViewModel"/>
        <variable name="dataclass" type="com.cua.todolist.model.Notes"/>
    </data>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:paddingBottom="5dp"

        tools:background="#FFFFFF"
        android:id="@+id/notesPage"
>
    <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notesCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/color1"

            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="6dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="10dp"

                tools:text="Hello World This Damn Wo..."
                android:text="@{viewmodel.checkTitle(dataclass.title)}"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorText"

                android:layout_marginTop="47dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
        >
            <!--TODO Atas 67 ; -->
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            tools:text="Lorem ipsum dolor sit amet. Ames nakhimuekha lou dolor mikhu aserabtika"
            android:text="@{viewmodel.checkContent(dataclass.content)}"
            android:fontFamily="@font/roboto_light"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    tools:text="22th April 2019 07:00:00AM"
                    android:text="@{viewmodel.convertTime(dataclass.created_at)}"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</layout>